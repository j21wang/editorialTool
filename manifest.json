{
	"manifest_version": 2,
	"name": "Editorial Tool",
	"description": "This extension permits a user to add web page content to a universal database.",
	"version": "0.1",
	"permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "storage"
    ],
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": "images/icon.png"
	},
    "web_accessible_resources": [
        "jquery-2.0.2.min.js"
    ],
	"background": {
		"scripts": ["js/uuid.js", "js/background.js"]
	},
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": ["css/lb.css"],
            "js": ["js/jquery-2.0.2.min.js", "js/content.js"]
        }
    ],
    "permissions": [
        "http://researchvm-5.cs.rutgers.edu/",
        "tabs"
    ]
}
